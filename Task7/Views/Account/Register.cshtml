@model Task7.ViewModels.RegisterViewModel

<h2>Регистрация нового пользователя</h2>
<form method="post" asp-controller="Account" asp-action="Register">
    <div asp-validation-summary="ModelOnly"></div>

    <div class="input-group mb-3">
        <input class="form-control" placeholder="Name" asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div class="input-group mb-3">

    <div class="input-group mb-3">
        <input class="form-control" placeholder="UserName" asp-for="UserName" />
        <span asp-validation-for="UserName"></span>
    </div>

    <div class="input-group mb-3">
        <input class="form-control" placeholder="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <input class="btn btn-primary" type="submit" value="Registration" />
    </div>
</form>