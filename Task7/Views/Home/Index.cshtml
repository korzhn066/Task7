</script>

<div class="container">
    <div class="row clearfix">
        <div class="col-lg-12">
            <div class="card chat-app">

                <div id="plist" class="people-list">
                    <div class="input-group mb-3">
                        <button onclick="startChat()" class="btn btn-outline-secondary" type="button" id="button-addon1">
                            <i class="bi bi-search"></i>
                        </button>

                        <input oninput="onChangeUsernameInput()" type="text" id="usernameInput" class="form-control" placeholder="Enter friend username" aria-label="Example text with button addon" aria-describedby="button-addon1">
                    </div>

                    <div hidden id="friendsError" style="color:red; text-align: center; width: 100%;">
                        Invalid operation
                    </div>

                    <div style="width:100%; display:flex; justify-content: center;">
                        <div hidden id="friendsSpinner"  class="spinner-border" role="status">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                    

                    <ul id="friends"  class="list-unstyled chat-list mt-2 mb-0">
                        
                       <!--Тут друзья-->
                    </ul>

                </div>

                <div class="chat">
                    <div class="chat-header clearfix">
                        <div class="row">
                            <div class="col-10">
                                <button onclick="videocall()" type="button" class="btn btn-primary">Video call</button>
                                <a id="avideocall" hidden>Перейти в звонок</a>
                            </div>

                            <div class="col-2 btn btn-danger" style="height:37.6px; width: 94.25px;">
                                <a asp-controller="Account" asp-action="LogOut" style="color:white;text-decoration:none" >LogOut</a>
                            </div>
                        </div>
                    </div>

                    <div class="chat-history" id="chatContainer">
                        <div id="selectChat" style="width:100%; height: 100%; text-align: center;">
                            Select chat
                        </div>

                        <ul id="chatUl" class="m-b-0">
                            <!--Тут собщения-->
                        </ul>

                        <div style="width:100%; display:flex; justify-content: center;">
                            <div hidden id="messagesSpinner" class="spinner-border" role="status">
                                <span class="sr-only"></span>
                            </div>
                        </div>
                    </div>
                    
                        <div class="chat-message clearfix"
                            ondrop="dropHandler(event)"
                            ondragover="dragOverHandler(event)">
                     
                            <div class="input-group mb-0">
                                    <button onclick="sendMessage(event)" class="btn btn-outline-secondary" type="button">
                                    <i class="bi bi-send"></i>
                                    </button>

                                    <input  id="message" type="text" class="form-control" placeholder="Enter text or drag file here..."/>
                                    <input type="file" class="form-control" hidden/>
                            </div>
                        </div>
                   
                    
                </div>
            </div>
        </div>
    </div>
</div>